{
    "compilerOptions": {
        "target": "es2022",
        "lib": [
            "es2022"
        ],
        "module": "commonjs",
        "rootDir": ".",
        "outDir": ".build",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "functions/**/*.ts",
        "utils/**/*.ts",
        "**/*.test.ts"
    ],
    "exclude": [
        "node_modules",
        ".serverless"
    ]
}